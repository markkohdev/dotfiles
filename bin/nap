#!/usr/bin/python

import random, re
from time import sleep

log_files = [
    '/var/log/system.log',
    '/var/log/install.log'
    ]

while(True):
    log_file = random.choice(log_files)
    with open(log_file) as f:
        lines = f.readlines()

        for line in lines:
            if not re.match(r'\s', line):
                sleepytime = random.randint(50,1200)/1000.0
                sleep(sleepytime)
            print line.rstrip()

